<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jedabero.kinbu"
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/KinbuTheme_transparentAB" >
        <activity
            android:name="co.kinbu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="co.kinbu.SignInActivity"
            android:label="@string/sign_in"
            android:theme="@style/KinbuTheme"/>
        <activity android:name="co.kinbu.SignUpActivity"
            android:label="@string/sign_up"
            android:theme="@style/KinbuTheme"/>
        <activity
            android:name="co.kinbu.StepByStepActivity"
            android:label="@string/title_activity_step_by_step" />
        <activity
            android:name="co.kinbu.home.HomeActivity"
            android:label="@string/title_activity_home" />
    </application>

</manifest>
